<Page
    x:Class="FriendsZone.WinPhone.Pages.Groups.CreateGroupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FriendsZone.WinPhone.Pages.Groups"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBox x:Name="textName" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="380" PlaceholderText="Nazwa"/>
        <TextBox x:Name="textDescription" HorizontalAlignment="Left" Margin="10,54,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="380" PlaceholderText="Opis"/>
        <PasswordBox x:Name="textPassword" HorizontalAlignment="Left" Margin="10,98,0,0" VerticalAlignment="Top" Width="380" PlaceholderText="Hasło"/>
        <ComboBox x:Name="comboBoxColors" HorizontalAlignment="Left" Margin="10,132,0,0" VerticalAlignment="Top" Width="380"/>
        <Button x:Name="buttonCreateGroup" Content="Stwórz" HorizontalAlignment="Left" Margin="10,175,0,0" VerticalAlignment="Top" Width="380"/>

    </Grid>
</Page>
